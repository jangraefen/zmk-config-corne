#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/rgb.h>

#include <locale/keys_de.h>

/ {
    chosen {
        zmk,physical-layout = &default_layout;
    };
};

/ {
    combos {
        compatible = "zmk,combos";

        gui {
            bindings = <&kp LEFT_GUI>;
            key-positions = <36 38>;
        };
    };

    conditonal_layers {
        compatible = "zmk,conditional-layers";
        
        tri_layer {
          if-layers = <1 2>;
          then-layer = <3>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "BASE";
            bindings = <
                &kp ESC   &kp DE_Q &kp DE_W &kp DE_E  &kp DE_R &kp DE_T  /**/ &none /* ----- */ &none /**/ &kp DE_Z  &kp DE_U  &kp DE_I     &kp DE_O   &kp DE_P     &kp DE_QUESTION
                &kp TAB   &kp DE_A &kp DE_S &kp DE_D  &kp DE_F &kp DE_G  /**/ &none /* ----- */ &none /**/ &kp DE_H  &kp DE_J  &kp DE_K     &kp DE_L   &kp DE_PLUS  &kp DE_HASH
                &kp LSHFT &kp DE_Y &kp DE_X &kp DE_C  &kp DE_V &kp DE_B  /**/       /* ----- */       /**/ &kp DE_N  &kp DE_M  &kp DE_COMMA &kp DE_DOT &kp DE_MINUS &kp RSHIFT
                                            &kp LCTRL &mo 1    &kp SPACE /**/       /* ----- */       /**/ &kp ENTER &mo 2     &kp BSPC
            >;
            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp PG_UP PG_DN &inc_dec_kp C_PREV C_NEXT &inc_dec_kp C_BRI_DN C_BRI_UP>;
        };

        left_layer {
            display-name = "LEFT";
            bindings = <
                &studio_unlock &kp DE_EXCL  &kp DE_DQT     &kp DE_EURO &kp DE_DOLLAR &kp DE_PERCENT /**/ &none /* ----- */ &none /**/ &kp DE_AMPS &kp DE_SLASH &kp DE_LPAR &kp DE_RPAR &kp DE_EQUAL &none
                &bootloader    &none        &none       &kp DE_LBKT &kp DE_LBRC   &kp DE_LT      /**/ &none /* ----- */ &none /**/ &kp LEFT    &kp DOWN     &kp UP      &kp RIGHT   &kp DE_TILDE &none
                &sys_reset     &kp DE_GRAVE &kp DE_PIPE &kp DE_RBKT &kp DE_RBRC   &kp DE_GT      /**/       /* ----- */       /**/ &kp HOME    &kp PG_DN    &kp PG_UP   &kp END     &none        &none
                                                        &none       &trans        &none          /**/       /* ----- */       /**/ &kp TAB     &trans       &kp DELETE
            >;
        };

        right_layer {
            display-name = "RIGHT";
            bindings = <
                &none &kp DE_AT       &none     &kp DE_N7 &kp DE_N8 &kp DE_N9 /**/ &none /* ----- */ &none /**/ &kp DE_UMLAUT_U &none  &kp DE_UMLAUT_O &none &none &kp DE_BACKSLASH
                &none &kp DE_UMLAUT_A &kp DE_SZ &kp DE_N4 &kp DE_N5 &kp DE_N6 /**/ &none /* ----- */ &none /**/ &none           &none  &none           &none &none &none
                &none &none           &none     &kp DE_N1 &kp DE_N2 &kp DE_N3 /**/       /* ----- */       /**/ &none           &none  &none           &none &none &none
                                                &kp DE_N0 &trans    &none     /**/       /* ----- */       /**/ &none           &trans &none
            >;
        };

        func_layer {
            display-name = "FUNC";
            bindings = <
                &kp F11 &kp F1 &kp F2        &kp F3 &kp F4       &kp F5 /**/ &none /* ----- */ &none /**/ &kp F6       &kp F7        &kp F8        &kp F9        &kp F10      &kp F12
                &none   &none  &kp LG(LS(S)) &none  &none        &none  /**/ &none /* ----- */ &none /**/ &kp LG(LEFT) &kp LG(PG_DN) &kp LG(PG_UP) &kp LG(RIGHT) &none        &none
                &none   &none  &none         &none  &kp LG(DE_V) &none  /**/       /* ----- */       /**/ &bt BT_SEL_0 &bt BT_SEL_1  &bt BT_SEL_2  &bt BT_SEL_3  &bt BT_SEL_4 &bt BT_CLR
                                             &none  &trans       &none  /**/       /* ----- */       /**/ &none        &trans        &none
            >;
        };

        extra_layer_2 {
            display-name = "EXTRA 2";
            bindings = <
                &none &none &none &none &none  &none /**/ &none /* ----- */ &none /**/ &none &none  &none &none &none &none
                &none &none &none &none &none  &none /**/ &none /* ----- */ &none /**/ &none &none  &none &none &none &none
                &none &none &none &none &none  &none /**/       /* ----- */       /**/ &none &none  &none &none &none &none
                                  &none &trans &none /**/       /* ----- */       /**/ &none &trans &none
            >;
        };

        extra_layer_3 {
            display-name = "EXTRA 3";
            bindings = <
                &none &none &none &none &none  &none /**/ &none /* ----- */ &none /**/ &none &none  &none &none &none &none
                &none &none &none &none &none  &none /**/ &none /* ----- */ &none /**/ &none &none  &none &none &none &none
                &none &none &none &none &none  &none /**/       /* ----- */       /**/ &none &none  &none &none &none &none
                                  &none &trans &none /**/       /* ----- */       /**/ &none &trans &none
            >;
        };

        extra_layer_4 {
            display-name = "EXTRA 4";
            bindings = <
                &none &none &none &none &none  &none /**/ &none /* ----- */ &none /**/ &none &none  &none &none &none &none
                &none &none &none &none &none  &none /**/ &none /* ----- */ &none /**/ &none &none  &none &none &none &none
                &none &none &none &none &none  &none /**/       /* ----- */       /**/ &none &none  &none &none &none &none
                                  &none &trans &none /**/       /* ----- */       /**/ &none &trans &none
            >;
        };

        extra_layer_5 {
            display-name = "EXTRA 5";
            bindings = <
                &none &none &none &none &none  &none /**/ &none /* ----- */ &none /**/ &none &none  &none &none &none &none
                &none &none &none &none &none  &none /**/ &none /* ----- */ &none /**/ &none &none  &none &none &none &none
                &none &none &none &none &none  &none /**/       /* ----- */       /**/ &none &none  &none &none &none &none
                                  &none &trans &none /**/       /* ----- */       /**/ &none &trans &none
            >;
        };

        extra_layer_6 {
            display-name = "EXTRA 6";
            bindings = <
                &none &none &none &none &none  &none /**/ &none /* ----- */ &none /**/ &none &none  &none &none &none &none
                &none &none &none &none &none  &none /**/ &none /* ----- */ &none /**/ &none &none  &none &none &none &none
                &none &none &none &none &none  &none /**/       /* ----- */       /**/ &none &none  &none &none &none &none
                                  &none &trans &none /**/       /* ----- */       /**/ &none &trans &none
            >;
        };
    };
};
